{
  "compilerOptions": {
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "target": "es2021",                                
    "noImplicitAny": true,                            
    "moduleResolution": "node",    
    "sourceMap": true,                 
    "outDir": "build",                                   
    "baseUrl": ".",                                
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },                                                                         
    "skipLibCheck": true,                               
  },
  "include": [
    "src/**/*"
  ]
}
